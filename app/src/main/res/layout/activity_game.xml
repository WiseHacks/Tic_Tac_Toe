<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@drawable/gamebg"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/custom_dialog"
        android:fontFamily="@font/carter_one"
        android:text="Restart"
        android:textAllCaps="false"
        android:textColor="#400C49"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/custom_dialog"
        android:fontFamily="@font/carter_one"

        android:text="Quit"
        android:textAllCaps="false"
        android:textColor="#400C49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuit">

        <Button
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/custom_dialog4"
            android:fontFamily="@font/carter_one"
            android:id="@+id/btn0"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:tag="0"
            android:textSize="@dimen/_60sdp"
            tools:text="0" />

        <Button
            android:background="@drawable/custom_dialog4"
            android:fontFamily="@font/carter_one"
            android:layout_margin="@dimen/_2sdp"
            android:id="@+id/btn1"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:tag="1"
            android:textSize="@dimen/_60sdp"
            tools:text="1" />

        <Button
            android:background="@drawable/custom_dialog4"
            android:fontFamily="@font/carter_one"
            android:layout_margin="@dimen/_2sdp"
            android:id="@+id/btn2"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:tag="2"
            android:textSize="@dimen/_60sdp"
            tools:text="2" />

        <Button
            android:background="@drawable/custom_dialog4"
            android:fontFamily="@font/carter_one"
            android:layout_margin="@dimen/_2sdp"
            android:id="@+id/btn3"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:tag="3"
            android:textSize="@dimen/_60sdp"
            tools:text="3" />

        <Button
            android:background="@drawable/custom_dialog4"
            android:fontFamily="@font/carter_one"
            android:layout_margin="@dimen/_2sdp"
            android:id="@+id/btn4"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:tag="4"
            android:textSize="@dimen/_60sdp"
            tools:text="4" />

        <Button
            android:background="@drawable/custom_dialog4"
            android:fontFamily="@font/carter_one"
            android:layout_margin="@dimen/_2sdp"
            android:id="@+id/btn5"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:tag="5"
            android:textSize="@dimen/_60sdp"
            tools:text="5" />

        <Button
            android:background="@drawable/custom_dialog4"
            android:fontFamily="@font/carter_one"
            android:layout_margin="@dimen/_2sdp"
            android:id="@+id/btn6"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:tag="6"
            android:textSize="@dimen/_60sdp"
            tools:text="6" />

        <Button
            android:background="@drawable/custom_dialog4"
            android:fontFamily="@font/carter_one"
            android:layout_margin="@dimen/_2sdp"
            android:id="@+id/btn7"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:tag="7"
            android:textSize="@dimen/_60sdp"
            tools:text="7" />

        <Button
            android:background="@drawable/custom_dialog4"
            android:fontFamily="@font/carter_one"
            android:layout_margin="@dimen/_2sdp"
            android:id="@+id/btn8"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:tag="8"
            android:textSize="@dimen/_60sdp"
            tools:text="8" />
    </GridLayout>

    <TextView
        android:id="@+id/textTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turns"
        android:textSize="@dimen/_18sdp"
        android:fontFamily="@font/carter_one"
        android:textColor="#501578"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnQuit" />

</androidx.constraintlayout.widget.ConstraintLayout>